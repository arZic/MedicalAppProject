<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.btssio.leroybenjamin.medicalappproject.PatientActivity">

    <TextView
        android:id="@+id/textviewCreerPatientFormulaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CrÃ©er un patient"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editviewNomFormulaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/editviewPrenomFormulaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/spinnerMotifFormulaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <DatePicker
        android:id="@+id/editviewDateNaissanceFormulaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"/>

</LinearLayout>
